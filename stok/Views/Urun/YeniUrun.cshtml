@model stok.Models.entity.TBLURUNLER
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required="" />
    </div>
    <div>
        <label>Marka ve Detaylar</label>
        <textarea id="markaveaciklama" name="MARKA" class="form-control"></textarea>
    </div>
    <div>
        <label>Kategori seçiniz</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div> 
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" />
    </div>

    
    <div style="margin-top:15px">
        <button class="btn btn-primary">Ürün Ekle</button>
    </div>


    <script>
        CKEDITOR.replace('markaveaciklama');
    </script>