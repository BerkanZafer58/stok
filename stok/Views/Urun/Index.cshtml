@using stok.Models.entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_MainLayout.cshtml";


}

<table ıd="tbl" class="table table-bordered">
    <tbody>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>sil</th>
            <th>güncelle</th>
        </tr>
    </tbody>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.URUNID</th>
                <td>@urn.URUNAD</td>
                <td>@Html.Raw(urn.MARKA)</td>
                <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                <td>@urn.FIYAT</td>
                <td>@urn.STOK</td>
                <td>@Html.ActionLink("Sil", "sil", new { id = urn.URUNID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyormusunuz')" })</td>
                <td><a href="/URUN/UrunGetir/@urn.URUNID" Class="btn btn-success">Güncelle</a></td>
            </tr>

        }
       
    </tbody>
</table>
<a href="/URUN/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('tbl').dataTable({});
</script>