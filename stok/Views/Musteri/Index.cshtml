@using stok.Models.entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

    <table class="table table-bordered">
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ ADI</th>
            <th>MÜŞTERİ SOYADI</th>
           
        </tr>
        <tbody>
            @foreach (var mus in Model)
            {
            <tr>
                <th>@mus.MUSTERIID</th>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" Class="btn btn-danger">Sil</a></td>
                <td><a href="/MUSTERI/GUNCELLE/@mus.MUSTERIID" Class="btn btn-success">Güncelle</a></td>
            </tr>
            }
        </tbody>


    </table>
    <a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
