@using stok.Models.entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

    <table class="table table-bordered">
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ ADI</th>
            <th>MÜŞTERİ SOYADI</th>
            <th>SİL</th>
            <th>GÜNCELLLE</th>
        </tr>
        <tbody>
            @foreach (var mus in Model)
            {
            <tr>
                <th>@mus.MUSTERIID</th>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td>@Html.ActionLink("Sil", "sil", new { id = mus.MUSTERIID }, new { @class = "btn btn-danger", onclick = "return confirm('Gerçekten Silmek İstiyormusunuz')" })</td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" Class="btn btn-success">Güncelle</a></td>

            </tr>
            }
        </tbody>


    </table>
    <a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
