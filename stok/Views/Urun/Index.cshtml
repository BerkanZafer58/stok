@using stok.Models.entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>sil</th>
        <th>güncelle</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <th>@urn.URUNID</th>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.URUNKATEGORI</td>
            <td>@urn.FIYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/URUN/SIL/@urn.URUNID" Class="btn btn-danger">Sil</a></td>
            <td><a href="/URUN/GUNCELLE/@urn.URUNID" Class="btn btn-success">Güncelle</a></td>
        </tr>

        }
        

    </tbody>
</table>
<a href="/URUN/YeniUrun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
